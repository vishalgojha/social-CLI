#!/usr/bin/env sh
set -eu

REMOTE_NAME="${1:-origin}"
REMOTE_URL="${2:-}"

REPO_ROOT="$(git rev-parse --show-toplevel 2>/dev/null || pwd)"
SCRIPT_PATH="$REPO_ROOT/scripts/write-codex-handoff.js"
if [ ! -f "$SCRIPT_PATH" ]; then
  exit 0
fi

cd "$REPO_ROOT"
node "$SCRIPT_PATH" --remote "$REMOTE_NAME" --url "$REMOTE_URL"
