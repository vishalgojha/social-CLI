{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist-legacy",
    "rootDir": ".",
    "strict": false,
    "noCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    "bin/**/*.ts",
    "commands/**/*.ts",
    "lib/**/*.ts",
    "scripts/**/*.ts",
    "src-runtime/**/*.ts",
    "test/**/*.ts",
    "tools/registry.ts",
    "index.ts"
  ],
  "exclude": [
    "dist-legacy/**",
    "dist-runtime/**",
    "dist-social/**",
    "node_modules/**",
    "socialclaw-core/**",
    "tools/agentic-tui/**"
  ]
}
